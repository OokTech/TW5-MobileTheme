/* Popout Menus */

.tc-scrollable-menu-default {
    left:2em;
	background-color: white;
	padding: 1em;
    width:75vw;
    max-width:700px;
	height: 98vh;
    text-align:left;
    position: fixed;
    z-index: 999;
}

.tc-popup-menu-default {
    left:2em;
    top:1em;
    background: white;
    height: 98vh;
    border:solid;
    border-color:lightgrey;
    border-width:1px;
    width:75vw;
    max-width:700px;
    height:75vh;
    text-align:left;
    position: fixed;
    z-index: 999;
}

.tc-popup-menu-block {
    background: white;
    border:solid;
    border-color:lightgrey;
    border-width:1px;
    left:2em;
    text-align:left;
    position: fixed;
    z-index: 999;
}
